        color: var(--color-text);
        text-decoration: none;
        font-weight: 600;
        padding: 0.75rem 1.25rem;
        background: rgba(255,255,255,0.7);
        border-radius: 3rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
